            <div class="form-group"> {{! added by jack check this.}}
              <input type="checkbox" id="beneficiaryIsCharity" class="btn-check" placeholder= required autocomplete="off" />
              <label class="btn btn-outline-primary" for="beneficiaryIsCharity">Charity</label>
            </div>

          <div class="form-group"> {{! added by jack check this.}}
              <label>Guardian Name</label>
              <input type="text" id="beneficiaryGuardianName" class="form-control">
            </div>

            <div class="form-group"> {{! added by jack check this.}}
              <label>Guardian Address</label>
              <input type="text" id="beneficiaryGuardianAddress" class="form-control" placeholder="example: # street name, suburb, state, post-code" />
            </div>



            <div class="modal-footer">
              <button type="submit" class="btn btn-light" id="addBeneficiary">Save</button>
            </div>

          </div>
        </form>  

      </div>     
    </div>
  </div> 
