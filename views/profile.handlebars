<header class="header">
  <div class="welcome">Welcome back!</div>
  <ul class="menu">
    <li class="dropdown" style="float:left;">
      <a href="#">Options</a>
      <div class="dropdown-content" style="left:0;">
        <button><i class="fas fa-envelope-square"> Email</i></button>
        <button><i class="fas fa-download"> Download</i></button>
        <button><i class="fas fa-share-alt-square"> Share</i></button>
      </div>
    </li>
    <li><a href="/api/pdf/{{id}}" target="_blank">Preview</a></li>
    <li><a href="/" id="logout">Logout</a></li>
  </ul>
</header>

<section class="user">
  <div class="logo">Thy<span>Will</span></div>
  <div class="box-1">
    <div class="box-head">
      {{#if gender}}
      <img src="/assets/images/users/oldman.jpg" alt="oldman">
      {{else}}
      <img src="/assets/images/users/oldlady.jpg" alt="oldlady">
      {{/if}}
      <div>
        <p>Will owner:</p>
        <p>{{name}}</p>
      </div>
    </div>
    <p>Email: <a href="mailto:{{email}}">{{email}}</a></p>
    <p>D.O.B: {{DOB}}</p>
    <p>Address: {{address}}</p>
    <p>Casket: {{casket}}</p>
    <p>Ceremony: {{ceremony}}</p>
    <button>Edit</button>
  </div>

  <h2 class="title">Your Will is <span class="status">in Progress</span></h2>

  <div class="box-2">
    <div class="max-width">
      <div class="carousel owl-carousel">
        <div class="card" id="part-1">
          <h3 class="num">1</h3>
          <h4>Benificiaries</h4>
          <p>Individuals entitled to inherit money or property from this will owner.</p>
          {{#each beneficiaries}}
          {{> beneficiary-details}}
          {{/each}}
          <button data-toggle="modal" data-target="#beneficiaryAdd"><i class="fas fa-plus"></i></button>
          <button class="w-100 subBtn" id="#beneficiarySub">Submit</button>
        </div>
        <div class="card" id="part-2">
          <h3 class="num">2</h3>
          <h4>Executors</h4>
          <p>The one to execute your wishes.</p>
          {{#each executors}}
          {{> executor-details}}
          {{/each}}
          <button class="w-100 addBtn" data-toggle="modal" data-target="#executorModal">Add</button>
        </div>
        <div class="card" id="part-3">
          <h3 class="num">3</h3>
          <h4>Asset</h4>
          <p>A quick list of your major Assets.</p>
          <button class="w-100" data-toggle="modal" data-target="#assetModal">Add</button>
          {{#each assets}}
          {{> asset-details}}
          {{/each}}

        </div>
        <div class="card" id="part-4">
          <h3 class="num">4</h3>
          <h4>AssetApportion</h4>
          <p>Set up percentages for each benificiary.</p>
          <button class="w-100" data-toggle="modal" data-target="#apportionModal">Add</button>
          {{#each assetApportions}}
          {{> assetApportion-details}}
          {{/each}}

        </div>
        <div class="card" id="part-5">
          <h3 class="num">5</h3>
          <h4>Witness</h4>
          <p>Basic info of your nominated Witness</p>
          {{#each witnesses}}
          {{> witness-details}}
          {{/each}}
          <button class="w-100 addBtn" data-toggle="modal" data-target="#witnessModal">Add</button>
        </div>
      </div>
    </div>
  </div>
</section>

